{
  "name": "monoco-vscode",
  "displayName": "Monoco",
  "description": "Native Kanban & Agent Management for Monoco. Manage tasks, visualize workflows, and orchestrate AI agents directly in VS Code.",
  "version": "0.2.5",
  "publisher": "indenscale",
  "repository": {
    "type": "git",
    "url": "https://github.com/IndenScale/Monoco.git",
    "directory": "Toolkit/extensions/vscode"
  },
  "homepage": "https://github.com/IndenScale/Monoco/tree/main/Toolkit/extensions/vscode",
  "bugs": {
    "url": "https://github.com/IndenScale/Monoco/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "monoco",
    "kanban",
    "project management",
    "issue tracking",
    "agent",
    "ai",
    "workflow",
    "productivity",
    "visualization",
    "todo",
    "markdown",
    "lsp"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "onLanguage:markdown",
    "workspaceContains:.monoco/project.yaml",
    "workspaceContains:Issues"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "monoco-cockpit",
          "title": "Monoco",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "monoco-cockpit": [
        {
          "id": "monoco-kanban",
          "type": "webview",
          "name": "Issues",
          "icon": "media/icon.svg"
        },
        {
          "id": "monoco-executions",
          "name": "Actions",
          "icon": "media/icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "monoco.openKanban",
        "title": "Monoco: Open Kanban"
      },
      {
        "command": "monoco.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "monoco.runAction",
        "title": "Run Action",
        "icon": "$(play)"
      },
      {
        "command": "monoco.createIssue",
        "title": "New Issue",
        "icon": "$(plus)"
      },
      {
        "command": "monoco.openSettings",
        "title": "Settings",
        "icon": "$(settings-gear)"
      },
      {
        "command": "monoco.openWebUI",
        "title": "Open Web UI",
        "icon": "$(browser)"
      },
      {
        "command": "monoco.checkDependencies",
        "title": "Check Dependencies",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "monoco.createIssue",
          "when": "view == monoco-kanban",
          "group": "navigation@1"
        },
        {
          "command": "monoco.refreshEntry",
          "when": "view == monoco-kanban",
          "group": "navigation@2"
        },
        {
          "command": "monoco.openWebUI",
          "when": "view == monoco-kanban",
          "group": "navigation@3"
        },
        {
          "command": "monoco.openSettings",
          "when": "view == monoco-kanban",
          "group": "navigation@4"
        },
        {
          "command": "monoco.refreshEntry",
          "when": "view == monoco-executions",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "monoco.runAction",
          "when": "view == monoco-executions && viewItem == action",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Monoco",
      "properties": {
        "monoco.webUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8642",
          "description": "URL for Monoco Web UI"
        },
        "monoco.executablePath": {
          "type": "string",
          "default": "monoco",
          "description": "Path to the monoco executable. If not set, it will attempt to find 'monoco' in the system PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b client/tsconfig.json && tsc -b server/tsconfig.json && npm run copy-assets && npm run copy-server-assets",
    "copy-assets": "mkdir -p client/out/webview && cp client/src/webview/* client/out/webview/",
    "copy-server-assets": "mkdir -p server/out/schema && cp server/src/schema/* server/out/schema/",
    "watch": "tsc -b client/tsconfig.json -w",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint client/src --ext ts",
    "test": "node ./client/out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/sinon": "^10.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.10",
    "mocha": "^10.4.0",
    "ovsx": "^0.8.3",
    "sinon": "^17.0.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
